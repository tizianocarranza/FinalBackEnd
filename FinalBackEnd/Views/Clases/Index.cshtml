@model IEnumerable<FinalBackEnd.Models.Clase>

@{
    ViewData["Title"] = "Clases";
}

<h1>Clases</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Crear nueva clase</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dia)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.Id">Editar</a> 
                <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.Id">Detalles</a> 
                <a asp-action="Delete" class=" btn btn-outline-danger" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
